<!DOCTYPE html>
<html>
  <body>
    <div class="form">
      <%= form_for @measure do |form| %>
        <div class="box-form">
          <div class="form-content">
            <h3 class="titulo">Adicionar Medida</h3>
            <div class="form-input">
              <label for="name_muscle"> MÃºsculo <span>*</span></label>
              <%= form.text_field :name_muscle, step: :any, autofocus: true, autocomplete: "name_muscle", class:'form_login', :required => true %>
            </div>
            <div class="form-input">
                <label for="new_measure"> Medida (em cm) <span>*</span></label>
                <%= form.number_field :new_measure, step: :any, min: 1, autofocus: true, autocomplete: "weigth", class:'form_login', :required => true %>
            </div>
            <%= form.hidden_field :user_id, value: current_user.id.to_i %>
            <div class="actions">
              <%= form.submit 'Salvar', class:'button_login' %>
            </div>
        </div>
      <% end %>
    </div>
  </body>
</html>
