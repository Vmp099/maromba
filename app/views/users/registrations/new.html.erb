<!DOCTYPE html>
<html>
  <body>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
        <div class="box-form">
          <div class="form-content">
            <h3 class="titulo">Bem Vindo!</h3>
            <p class="sub-titulo">Faça Seu Registro!</p>
            <div class="form-input">
                <label for="username"> Usuário <span>*</span></label>
                <%= f.text_field :username, autofocus: true, autocomplete: "username", class:'form_login' %>
            </div>
            <div class="form-input">
                <label for="email"> E-mail <span>*</span></label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form_login' %>
            </div>
            <div class="form-input">
              <label for="senha"> Senha
                <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
              <span>*</span></label>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:'form_login' %>
            </div>
            <div class="form-input">
                <label for="email">Confirmar a senha <span>*</span></label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form_login' %>
            </div>
            <div class="actions">
              <%= f.submit 'Registrar', class:'button_login' %>
            </div>
            </a>
            <%= render "users/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </body>
</html>
