<%= form_for :training, url: trainings_path do |form| %>
  <div class="navbar-item has-dropdown is-hoverable">
    <div class="field">
        <p class="input navbar-link" disabled=true><%= @routine.routine_select %></p>
    </div>
    <div class="navbar-dropdown">

      <% @i.times do %>

          <div class="field">
            <%= form.label :name_training, "Treino", class: "label" %>
            <%= form.text_field :name_training, class: "input",:multiple => true %>
          </div>

          <div class="field">
            <%= form.label :weigth, "Peso", class: "label" %>
            <%= form.number_field :weigth, step: :any, :multiple => true %>
          </div>
        <% end %>
        <%= form.hidden_field :user_id, value: current_user.id.to_i %>
        <%= form.hidden_field :routine_id, value: @routine.id.to_i %>
      <div class="field">
        <%= form.submit "Salvar", class: "button is-link" %>
      </div>
    </div>
  </div>
<% end %>
