<%= form_for :training, url: trainings_path do |form| %>
    <div class="field">
          <%= form.label :name_training, "Nome do treino", class: "label" %>
      <%= form.text_field :name_training, class: "input" %>
    </div>
    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="field">
      <%= form.label :weigth, "Peso", class: "label" %>
      <%= form.number_field :weigth, step: :any %>
    </div>

    <div class="field">
      <%= form.submit "Salvar", class: "button is-link" %>
    </div>
<% end %>
