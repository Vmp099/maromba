<%= form_for :training, url: edit_training_path do |form| %>

          <div class="field">
            <%= form.label :name_training, "Treino", class: "label" %>
            <%= form.text_field :name_training, class: "input"%>
          </div>

          <div class="field">
            <%= form.label :weigth, "Peso", class: "label" %>
            <%= form.number_field :weigth, step: :any%>
          </div>
        <%= form.hidden_field :user_id, value: current_user.id.to_i %>
        <%= form.hidden_field :routine_id, value: @training.routine_id.to_i %>
      <div class="field">
        <%= form.submit "Salvar", class: "button is-link" %>
      </div>
    </div>
  </div>
<% end %>
